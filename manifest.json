{
	"manifest_version": 2,
	"name": "Writefreely Previewer",
	"short_name": "wf-preview",
	"description": "A markdown previewer for writefreely posts and snap.as captions. Preview your thoughts in seconds.",
	"version": "1",
	"icons": {
		"16": "icons/black-trans-16.png",
		"19": "icons/black-trans-19.png",
		"38": "icons/black-trans-38.png",
		"48": "icons/black-trans-48.png"
	},
	"permissions": [
		"activeTab"
	],
	"optional_permissions": [
		"tabs",
		"http://*/",
		"https://*/"
	],
	"browser_action": {
		"default_title": "Markdown Preview"
	},
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"windows": "Ctrl+Space",
				"mac": "Command+Space",
				"chromeos": "Ctrl+Space",
				"linux": "Ctrl+Space"
			}
		}
	},
	"background": {
		"scripts": ["background.js"]
	}
}
